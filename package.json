{
  "name": "fifteen-puzzle",
  "private": true,
  "version": "1.4.1",
  "type": "module",
  "keywords": [
    "15 puzzle",
    "web game",
    "puzzle"
  ],
  "description": "A PWA 15 Puzzle game",
  "repository": "github:eldarlrd/fifteen-puzzle",
  "homepage": "https://eldarlrd.is-a.dev/fifteen-puzzle",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.is-a.dev)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "bundle": "tsc -b && vite build",
    "preview": "vite preview",
    "deployer": "bun bundle && gh-pages -b prod -m 'build(prod): deployment' -d dist",
    "lint": "eslint src",
    "pretty": "prettier 'src/**/*.{ts,tsx,pcss}' --write",
    "format": "bun lint --fix && bun pretty",
    "cut": "knip --fix --cache"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "experimentalTernaries": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "@fontsource/righteous": "^5.2.6",
    "@tailwindcss/vite": "^4.1.12",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-promise": "^7.2.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "knip": "^5.63.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vite-plugin-pwa": "^1.0.3",
    "workbox-build": "^7.3.0",
    "workbox-window": "^7.3.0"
  }
}
